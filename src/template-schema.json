{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^v\\d+.\\d+.\\d+$",
      "nullable": true
    },
    "automerge": {
      "type": "boolean",
      "nullable": true
    },
    "files": {
      "type": "array",
      "nullable": true,
      "items": {
        "type": "object",
        "properties": {
          "source": {
            "type": "string"
          },
          "destination": {
            "type": "string"
          }
        },
        "required": [
          "source",
          "destination"
        ]
      }
    },
    "values": {
      "type": "object"
    }
  },
  "required": [],
  "additionalProperties": false
}